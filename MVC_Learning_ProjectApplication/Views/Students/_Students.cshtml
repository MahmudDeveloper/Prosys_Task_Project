@model IEnumerable<Student>

@if (Model!=null && Model.Count()>0)
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Surname</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var student in Model)
			{
				<tr class="student-row" student-id="@student.Id">
					<td>@student.Name</td>
					<td>@student.SurName</td>
				</tr>
			}
		</tbody>
	</table>
}