@model List<Student>

@section title{
	<h3>Manage Students:</h3>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Class</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.ClassC?.Name</td>
                    <td>@student.Name</td>
                    <td>@student.SurName</td>
                    <td>
                        <a class="btn btn-link" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                        <a class="btn btn-link" asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id" onclick="return confirmDelete()">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<a class="btn btn-primary mb-3" asp-controller="Students" asp-action="AddStudent">Add New Student</a>
@section Scripts {
    <script>
        function confirmDelete(){
            return confirm("Are you sure you want to delete this student?")
        }
    </script>
}