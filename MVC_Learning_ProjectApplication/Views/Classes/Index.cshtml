@model List<Class>

@section title {
    <h3>Manage Classes:</h3>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var classC in Model)
            {
                <tr>
                    <td>@classC.Name</td>
                    <td>@classC.Description</td>
                    <td>
                        <a class="btn btn-link" asp-controller="Classes" asp-action="Edit" asp-route-id="@classC.Id">Edit</a>
                        <a class="btn btn-link" asp-controller="Classes" asp-action="DeleteClass" asp-route-id="@classC.Id" onclick="return confirmDelete()">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<a class="btn btn-primary mb-3" asp-controller="Classes" asp-action="AddClass">Add New Class</a>
@section Scripts{
    <script>
        function confirmDelete(){
            return confirm("Are you sure you want to delete this class?")
        }
    </script>
}