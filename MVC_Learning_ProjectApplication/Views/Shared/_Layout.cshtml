<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>School Exam System</title>
	<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
	<link rel="stylesheet" href="~/lib/css/site.css" asp-append-version="true"/>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">School Exam System</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
						aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav ms-auto flex-row">
						<li class="nav-item me-3">
							<a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item me-3">
							<a class="nav-link text-dark" asp-controller="AddExam" asp-action="Index">AddExam</a>
						</li>
						<li class="nav-item me-3">
							<a class="nav-link text-dark" asp-controller="Classes" asp-action="Index">Classes</a>
						</li>
						<li class="nav-item me-3">
							<a class="nav-link text-dark" asp-controller="Students" asp-action="Index">Students</a>
						</li>
						<li class="nav-item me-3">
							<a class="nav-link text-dark" asp-controller="Exams" asp-action="Index">Exams</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<div class="pb-3">
			@RenderSection("title")
		</div>
		<div>
			@RenderBody()
		</div>
	</div>
	<script src="https://code.jquery.com/jquery-3.7.1.min.js"
			integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
			crossorigin="anonymous"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
